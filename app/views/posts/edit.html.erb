<h2>スケジュール編集</h2>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= render "shared/error", obj: @post %>
<%= form_with model: @post do |f| %>
  <table>
    <tr>
      <th><%= f.label :title, "タイトル" %></th>
      <td><%= f.text_field :title, size: "70x10" %></td>
    </tr>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>

    <tr>
      <th><%= f.label :end_date, "終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>

    <tr>
      <th><%= f.label :checkbox, "終日" %></th>
      <td>
        <%= f.check_box :checkbox %>
        <span>終日の場合はチェック入力</span>
      </td>
    </td>

    <tr>
      <th><%= f.label :memo,"メモ" %></th>
      <td><%= f.text_area :memo, size: "65x20" %></td>
    </tr>
  </table>
  <div>
    <ul class = "page-change">
      <li><%= f.submit "編集完了", class: "button" %></li>
      <li><%= link_to "キャンセル", "/", class: "button" %></li>
    </ul>
  </div>
<% end %>