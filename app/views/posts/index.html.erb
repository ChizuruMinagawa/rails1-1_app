<div class = "head">
  <div><h2>スケジュール一覧</h2></div>
  <div>
    <%= link_to "新規作成","/posts/new", class: "button" %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post|%>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.start_date.strftime("%Y/%m/%d") %></td>
        <td><%= post.end_date.strftime("%Y/%m/%d") %></td>
        <td>
          <% if post.checkbox == true %>
          ○
          <% else post.checkbox == false %>
          <% end %>
        </td>
        <td><%= post.updated_at.to_s(:datetime_jp) %></td>
        <td>
          <span><%= link_to "詳細", post %></span>
          <span><%= link_to "編集", [:edit,post] %></span>
          <span><%= link_to "削除", post, method: :delete, data: { confirm: "予定を削除しますか？" } %></span>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class = "sum-schedule">
  <div>予定合計<span><%= @post %></span>件</div>
  <div>本日の日付<%= Date.current.strftime('%Y/%m/%d') %></div>
</div>